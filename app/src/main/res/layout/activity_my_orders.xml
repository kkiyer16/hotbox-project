<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        tools:context=".MyOrdersActivity">

    <Button
            android:id="@+id/view_my_orders_my_home_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:drawableRight="@drawable/ic_arrow"
            android:drawableTint="@color/white"
            android:gravity="left"
            android:padding="8dp"
            android:text="Click here to see Home Orders"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_orders_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_my_orders_my_home_orders"
            android:padding="10dp" />

</RelativeLayout>