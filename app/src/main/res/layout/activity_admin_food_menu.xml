<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminFoodMenuActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/admin_menu_main_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/upload_menu_image_admin"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_insert_photo" />

                <TextView
                        android:id="@+id/textview_upload_menu_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="15dp"
                        android:text="Upload Menu Image"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#A3A3A3">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_enter_food_name"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/rectangle_edittext"
                            android:hint="Enter Food Name*"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                        android:id="@+id/spinner_food_category"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rectangle_edittext" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="-45dp"
                        android:layout_marginRight="5dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_spinner_custom" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textColorHint="#A3A3A3">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edittext_enter_price"
                                android:layout_width="155dp"
                                android:layout_height="60dp"
                                android:background="@drawable/rectangle_edittext"
                                android:hint="Enter Price*"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:paddingLeft="10dp"
                            android:textColorHint="#A3A3A3">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edittext_enter_offer_price"
                                android:layout_width="155dp"
                                android:layout_height="60dp"
                                android:background="@drawable/rectangle_edittext"
                                android:hint="Offer Price"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#A3A3A3">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittext_enter_description"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/rectangle_edittext"
                            android:hint="Write Some Description"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                        android:id="@+id/button_save_food_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="serif-monospace"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>